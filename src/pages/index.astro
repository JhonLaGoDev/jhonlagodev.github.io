---
import Header from "../components/Header.astro";
import Sidebar from "../components/Sidebar.astro";
---


<!DOCTYPE html>
<html
>
  <Header title="Jhonatan Lara" />
  <body>
    <div class="content">
      <Sidebar selectedItem="home" />
      <nav class="main">
        <div class="container">
          <main class="fold-content-container">
            <div class="fold-content">
              <h1>Hi, I'm Jhon.<br />I specialize in data.</h1>
              <p class="lead">
              I have experience in web development and database architecture. I am committed to my own continuous growth and that of my team members in order to provide a service that meets the needs of our clients.
              </p>
            </div>
            <div style="width:600px; height:340px;">
              <iframe 
                width="100%" 
                height="100%" 
                margin: 0 auto;
                src="https://www.youtube.com/embed/vcHuZqwU75E" 
                title="Video presentacion"
                frameborder="0"
                allowfullscreen>
              </iframe>
            </div>
            <a href="https://github.com/JhonLaGoDev	" class="button w-button">Contact</a>
          </main>
          <div class="projects-section"> 
            <!-- Software Development -->
            <a href="/software-development" class="projects-container">
              <div class="single-projects-category">
                <div class="projects-category-image-container">
                  <img src="./assets/browser.svg" loading="lazy" alt="" class="projects-category-image" />
                </div>
              </div>
              <div class="single-projects-content">
                <h4>Software Development</h4>
                <div class="tech-tools-container">
                  <div class="mini-label-white gray-color">Technologies &amp; tools</div>
                  <div class="chips-container chips-container-small-width">
                    <div class="single-chip small-chip">React</div>
                    <div class="single-chip small-chip">Python</div>
                    <div class="single-chip small-chip">Node.js</div>
                    <div class="single-chip small-chip">MySQL DB</div>
                    <div class="single-chip small-chip">Nest.js</div>
                    <div class="single-chip small-chip">Angular</div>
                    <div class="single-chip small-chip">Java</div>
                    <div class="single-chip small-chip">SprintBoot</div>
                  </div>
                </div>
              </div>
            </a>
            <!-- DevOps -->
            <a href="/devops" class="projects-container">
              <div class="single-projects-category">
                <div class="projects-category-image-container devops-img">
                  <img src="./assets/database.svg" loading="lazy" alt="" class="projects-category-image" />
                </div>
              </div>
              <div class="single-projects-content">
                <h4>DevOps &amp;&nbsp;Cloud</h4>
                <div class="tech-tools-container">
                  <div class="mini-label-white gray-color">Technologies &amp; tools</div>
                  <div class="chips-container chips-container-small-width">
                    <div class="single-chip small-chip">Node.js</div>
                    <div class="single-chip small-chip">Intellij</div>
                    <div class="single-chip small-chip">VSC</div>
                    <div class="single-chip small-chip">Linux</div>
                    <div class="single-chip small-chip">VirtualBox</div>
                    <div class="single-chip small-chip">Bash</div>
                  </div>
                </div>
              </div>
            </a>
          </div>
        </div>
      </nav>
    </div>

    <!--[if lte IE 9]><script src="//cdnjs.cloudflare.com/ajax/libs/placeholders/3.0.2/placeholders.min.js"></script><![endif]-->
  </body>
</html>